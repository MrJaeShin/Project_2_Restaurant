<%- include('../partials/header') %>

<h1>Restaurant Information</h1>
<section>
  <div>Name:</div>
  <div><%= restaurants.name %></div>
  <div>Address:</div>
  <div><%= restaurants.address %></div>
  <div>Description:</div>
  <div><%= restaurants.description %></div>
  <div>Parking Availability:</div>
  <div><%= restaurants.parking ? 'Yes' : 'No' %></div>
  <form class="editBtn" action="/restaurants/<%= restaurants._id %>/edit">
	<button type="submit">EDIT</button>
  </form>
</section>
</br></br>

<section>
<h2>Reviews</h2>

<form method="POST" action="/restaurants/<%= restaurants._id %>/reviews">
	<lable>Username</lable>
	<input name="username" /></br>
	<label>Review:</label>
  	<textarea name="content"></textarea></br>
  	<label>Rating:</label>
  	<select name="rating">
    	<option value="1">1</option>
    	<option value="2">2</option>
    	<option value="3">3</option>
    	<option value="4">4</option>
    	<option value="5">5</option>
  	</select></br>
  	<button class="addReviewBtn" type="submit">Add Review</button>
</form>

<% if (restaurants.reviews.length) { %>
<table >
  <thead>
    <tr>
      <th>Date</th>
	  <th>Username</th>
      <th>Review</th>
      <th>Rating</th>
	  <th></th>
    </tr>
</thead>
<tbody>
	<% restaurants.reviews.forEach((r) => { %>
		<tr>
			<td><%= r.createdAt.toLocaleDateString() %></td>
			<td><%= r.username %></td>
			<td><%= r.content %></td>
			<td><%= r.rating %></td>
    	</tr>
    <% }) %>
</tbody>
</table>
<% } else { %>
<h5>No Reviews Yet</h5>
</section>

<% } %> <%- include('../partials/footer') %>
